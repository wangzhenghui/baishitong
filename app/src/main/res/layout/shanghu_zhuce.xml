<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/title"
        android:background="@drawable/lan_bar"
        android:gravity="center_vertical"  >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户注册"
            android:textSize="20dp"
            android:textColor="#0b0b0b"
            android:id="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />
        <TextView
            android:id="@+id/zhuce_reback_btn"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="1/2"
            android:textSize="18dp"
            android:textColor="#060606"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请选择加盟模式"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView2" />

        <Button
            android:id="@+id/main_geren_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/btn_style_green"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="个人加盟"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="welcome_geren"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp" />

        <Button
            android:id="@+id/main_gongsi_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/btn_style_green"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="公司加盟"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:onClick="welcome_gongsi"
            android:layout_marginTop="39dp"
            android:layout_below="@+id/main_geren_btn"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>