<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/title"
        android:background="@drawable/lan_bar"
        android:gravity="center_vertical"  >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户注册"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />


    </RelativeLayout>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title1"
        android:background="@drawable/lan_bar"
        android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="matrix"
                android:src="@drawable/touxian"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击设置头像"
            android:textColor="#000"
            android:id="@+id/textView3"
            android:layout_alignBottom="@+id/imageView"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/title3"
        android:background="@drawable/lan_bar"
        android:gravity="center_vertical"  >
        </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider"
        android:layout_alignParentTop="true"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:id="@+id/title21"
        android:background="@drawable/lan_bar"
        android:gravity="center_vertical"  >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请填写以下资料"
            android:textSize="20dp"
            android:textColor="#f4ec0b"
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nc_bottom2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/btn_send2"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="9dp"
            android:paddingLeft="7dp"
            android:textColor="#000"
            android:text="昵   称："
            android:layout_alignTop="@+id/et_sendmessage2"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_sendmessage2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_edit_normal"
            android:singleLine="true"
            android:hint="请输入你的昵称"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_send2" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/zsxm_bottom2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/btn_send3"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="9dp"
            android:paddingLeft="7dp"
            android:textColor="#000"
            android:text="真实姓名："
            android:layout_alignTop="@+id/et_sendmessage3"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_sendmessage3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_edit_normal"
            android:singleLine="true"
            android:hint="请输入你的真实姓名"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_send3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dz_bottom2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/btn_send4"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="9dp"
            android:paddingLeft="7dp"
            android:textColor="#000"
            android:text="详细地址："
            android:layout_alignTop="@+id/et_sendmessage4"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_sendmessage4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_edit_normal"
            android:singleLine="true"
            android:hint="请输入你的详细地址"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_send4" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/dhm_bottom2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/btn_send5"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="9dp"
            android:paddingLeft="7dp"
            android:textColor="#000"
            android:text="电话号码："
            android:layout_alignTop="@+id/et_sendmessage5"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_sendmessage5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_edit_normal"
            android:singleLine="true"
            android:hint="此手机号码将作为登录账户"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_send5" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/yzm_bottom2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/btn_send6"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="9dp"
            android:paddingLeft="7dp"
            android:textColor="#000"
            android:text="验证码："
            android:layout_alignTop="@+id/et_sendmessage6"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_sendmessage6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_edit_normal"
            android:singleLine="true"
            android:textSize="14dp"
            android:hint="输入验证码"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_send6" />
        <Button
            android:id="@+id/btn_yh"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="获取验证码"
            android:background="@drawable/chat_send_btn"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/et_sendmessage6" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dl_bottom2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/btn_send7"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="9dp"
            android:paddingLeft="7dp"
            android:textColor="#000"
            android:text="登录密码："
            android:layout_alignTop="@+id/et_sendmessage7"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/et_sendmessage7"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/login_edit_normal"
            android:singleLine="true"
            android:hint="请设置你的登录密码"
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_send7" />

    </RelativeLayout>

    <Button
        android:id="@+id/main_denglu_btn"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@drawable/btn_style_green"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:onClick="welcome_denglu" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>